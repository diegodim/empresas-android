<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioIOasys" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_pink</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_pink</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DesafioIOasys.ProgressDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="Theme.DesafioIOasys.Button" >
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/warm_grey</item>
    </style>

    <style name="Theme.DesafioIOasys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

        <style name="TextStyle2">
